<h3>New user</h3>
<%= form_for @user do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Password" %>
  <%= f.password_field :password %>
  
  <%= f.label "Height (in inches)" %>
  <%= f.text_field :height %>

  <%= f.label "How happy are you? (1-5 scale)" %>
  <%= f.text_field :happiness %>

  <%= f.label "How nauseous are you? (1-5 scale)" %>
  <%= f.text_field :nausea %>

  <%= f.label "How many dollars are in your pocket?" %>
  <%= f.text_field :tickets %>

  <%= f.label "Check if you are a theme park owner." %>
  <%= f.check_box :admin %>

  <%= f.submit "Create User" %>

<% end %>
